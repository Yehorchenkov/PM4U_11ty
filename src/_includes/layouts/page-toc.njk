---
layout: "layouts/base.njk"
---

<div class="columns mt-5">
    <div class="column is-8 is-offset-2">                
        <div class="content m-5 has-text-justified" id="contents" data-pagefind-body>

            <h1 class="title has-text-info">
                {{ events[event].title | safe }}                
            </h1>
            
            {% if events[event].subtitle %}
                <h2 class="subtitle has-text-info">
                    {{ events[event].subtitle | safe }}
                </h2>
            {% endif %}
           
           {{ content | safe }}

        </div>
    </div>
    
    <div class="column is-2 has-background-light">
        <aside class="menu menu-stick mt-3 is-hidden-touch">        
            
            <div class="is-normal is-size-6" id="toc">
                {# {{ content | safe }} #}
            </div>
        </aside>
    </div>

</div>

<script src="/assets/createToc.js"></script>

<script src="/assets/highlight-toc.js"></script>
